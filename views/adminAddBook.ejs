<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <H1>Add Book</H1>
    <div class="container" style="border: 2px solid black">
      <div class="row">
        <div class="d-flex justify content-center">
          <form action="/admin/addBook" method="post">
            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example1">Title</label>
              <input
                type="text"
                id="form1Example1"
                name="title"
                class="form-control"
              />
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example1">Author</label>
              <input
                type="text"
                id="form1Example1"
                name="author"
                class="form-control"
              />
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example1">ISBN</label>
              <input
                type="text"
                id="form1Example1"
                name="isbn"
                class="form-control"
              />
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example1">Stock</label>
              <input
                type="text"
                id="form1Example1"
                name="stock"
                class="form-control"
              />
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example1">Image Url</label>
              <input
                type="text"
                id="form1Example1"
                name="imgUrl"
                class="form-control"
              />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
              <select
                class="form-select"
                name="CategoryId"
                aria-label="Default select example"
              >
                <% result.forEach(el => { %>
                <option value="<%=el.id%>"><%=el.name%></option>
                <% }) %>
              </select>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block">
              Sign in
            </button>
          </form>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
