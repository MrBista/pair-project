    <h1 style="text-align: center;">My Book</h1>

    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Borrow Date</th>
            <th scope="col">Expired Date</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% data.forEach((el,idx) => { %>
                <tr>
                    <td><%= idx+1 %> </td>
                    <td> <img src="<%= el.Book.imgUrl  %>" alt="" style="max-width:100px;"></td>
                    <td><%= el.Book.tittle %> </td>
                    <td><%= el.Book.author %> </td>
                    <td><%= el.checkOutDateG %> </td>
                    <td> Expired in <%=  timeSince(el.expiredDate,el.checkOutDate) %>  </td>
                    <td><a href="/returnBook/<%= el.id %> "><button class="btn btn-success">Return Book</button></a> </td>
                  </tr>
            <% }) %>
          
      </table>

    <!-- MDB -->
<script
type="text/javascript"
src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.js"
></script>
</body>
